{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/src/main.js",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prisma:generate": "npx prismerge -i prismerge.json && npx prisma generate",
		"prisma:migrate": "npx prisma migrate dev",
		"prisma:migrate:prod": "npx prisma migrate deploy",
		"prisma:seed": "npx prisma db seed",
		"script:populate-maps": "./prisma/scripts/populate-maps.sh",
		"script:update-coverages": "./prisma/scripts/update-coverages.sh",
		"script:sql": "./prisma/scripts/execute-sql.sh"
	},
	"dependencies": {
		"@keyv/redis": "4.3.3",
		"@nestjs-modules/mailer": "2.0.2",
		"@nestjs/bull": "11.0.2",
		"@nestjs/cache-manager": "3.0.1",
		"@nestjs/common": "11.0.12",
		"@nestjs/config": "4.0.2",
		"@nestjs/core": "11.0.12",
		"@nestjs/event-emitter": "3.0.1",
		"@nestjs/jwt": "11.0.0",
		"@nestjs/passport": "11.0.5",
		"@nestjs/platform-express": "^11.0.12",
		"@nestjs/platform-socket.io": "11.0.12",
		"@nestjs/schedule": "5.0.1",
		"@nestjs/serve-static": "5.0.3",
		"@nestjs/swagger": "11.1.0",
		"@nestjs/websockets": "11.0.12",
		"@prisma/client": "6.5.0",
		"adm-zip": "0.5.16",
		"axios": "1.9.0",
		"bcryptjs": "3.0.2",
		"bull": "4.16.5",
		"cache-manager": "6.4.2",
		"class-transformer": "0.5.1",
		"class-validator": "0.14.1",
		"dayjs": "1.11.13",
		"ejs": "3.1.10",
		"fast-xml-parser": "5.1.0",
		"multer": "^2.0.1",
		"nodemailer": "6.10.0",
		"passport": "0.7.0",
		"passport-jwt": "4.0.1",
		"passport-local": "1.0.0",
		"reflect-metadata": "0.2.2",
		"request-ip": "3.3.0",
		"rxjs": "7.8.2",
		"uuid": "11.1.0",
		"xml-formatter": "3.6.5"
	},
	"devDependencies": {
		"@nestjs/cli": "11.0.5",
		"@nestjs/schematics": "11.0.2",
		"@nestjs/testing": "11.0.12",
		"@prisma-utils/prismerge": "1.7.0",
		"@types/adm-zip": "0.5.7",
		"@types/express": "5.0.1",
		"@types/jest": "29.5.14",
		"@types/multer": "1.4.12",
		"@types/node": "22.7.9",
		"@types/nodemailer": "6.4.17",
		"@types/passport-local": "1.0.38",
		"@types/request-ip": "0.0.41",
		"@types/supertest": "6.0.3",
		"@typescript-eslint/eslint-plugin": "8.29.0",
		"@typescript-eslint/parser": "8.29.0",
		"eslint": "9.23.0",
		"eslint-config-prettier": "10.1.1",
		"eslint-plugin-prettier": "5.2.6",
		"jest": "29.7.0",
		"prettier": "3.5.3",
		"prisma": "6.5.0",
		"source-map-support": "0.5.21",
		"supertest": "7.1.0",
		"ts-jest": "29.3.1",
		"ts-loader": "9.5.2",
		"ts-node": "10.9.2",
		"tsconfig-paths": "4.2.0",
		"typescript": "5.8.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	}
}
